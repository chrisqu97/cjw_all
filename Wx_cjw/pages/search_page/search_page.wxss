.none_display{
  display: none;
}
.search{
  display: block;
  width: 100%;
  background-color: #fff;
}
.search_bg{
  margin-left: 3px;
  margin-right: 3px;
  border-radius: 1em;
  background-color:#f5f5f5;
  height:20px;
  padding:5px;
  display: flex;  
  flex-direction: row;
  width: 100%ï¼›
}
.search_input{
  margin-left: 5px;
  font-size: 14px;
  width: 100%;
}
.search_icon{
  margin-top: 3px;
  margin-left: 3px;
}
.search_cancel{
  display: none;
}
/*selector*/
.search_selector{
  display: flex;
  flex-direction: row;
}
.search_bg_selector{
  width: 80%;
}
.search_cancel_selector{
  width:50px;
  text-align: center;
  border-radius: 1em;
  background-color:#fff;
  padding-top: 5px;
  height:25px;
  color: #aaaaaa;
  display: block;
}
.tag{
  padding:10px;
  font-size: 14px;
}
.tag_title{
  color: #888888;
  display: flex;
  flex-direction: row;
}
.tag_list{
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;

}
.tag_item{
  border:1rpx solid;
  border-radius: 1em;
  padding-top: 5px;
  padding-bottom: 5px;
  padding-left: 10px;
  padding-right: 10px;
  border-color: #cecece;
  color: #aaaaaa;
  margin-left: 5px;
  margin-top: 10px;
}

.option{
  padding-left: 10px;
  padding-right: 10px;
}
.option_item{
  margin-top: 10px;
}

